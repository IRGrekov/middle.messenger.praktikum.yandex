{
  "name": "messenger",
  "version": "1.0.0",
  "description": "application for exchange messages based on websockets and handlebars",
  "scripts": {
    "build": "node ./node_modules/webpack/bin/webpack.js",
    "start": "npm run build && node ./src/server.js",
    "serve": "webpack serve",
    "test": "cross-env NODE_ENV=test mocha --require test/babel-register.js --require test/mock.js",
    "lint": "npx eslint . --ext .ts --fix",
    "validate": "npm-run-all --parallel test lint",
    "precommit": "npm run validate",
    "deploy": "sudo heroku login && sudo heroku container:login && sudo heroku container:push web --app=alex-kor-messenger && sudo heroku container:release web --app=alex-kor-messenger"
  },
  "repository": {
    "type": "git",
  },
  "keywords": [
    "messenger",
    "websocket",
    "handlebars"
  ],
  "author": "Alexander Korostelev",
  "license": "MIT",
  "devDependencies": {
    "@anikin/parcel-transformer-handlebars": "^1.0.2",
    "@anikin/parcel-transformer-handlebars-precompile": "1.0.1",
    "@babel/core": "7.17.8",
    "@babel/preset-env": "7.16.11",
    "@babel/preset-typescript": "7.16.7",
    "@babel/register": "7.17.7",
    "@parcel/config-default": "2.3.0",
    "@parcel/transformer-less": "2.3.0",
    "@parcel/transformer-sass": "2.2.1",
    "@tsconfig/recommended": "1.0.1",
    "@types/chai": "4.3.0",
    "@types/mocha": "9.1.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "5.11.0",
    "@typescript-eslint/parser": "5.11.0",
    "chai": "4.3.6",
    "chai-dom": "^1.11.0",
    "clean-webpack-plugin": "^4.0.0",
    "cross-env": "^7.0.3",
    "css-loader": "6.7.1",
    "eslint": "8.9.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "16.1.0",
    "eslint-plugin-import": "^2.25.4",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "7.0.4",
    "jsdom": "19.0.0",
    "less": "4.1.2",
    "less-loader": "10.2.0",
    "mocha": "9.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.5.1",
    "regenerator-runtime": "^0.13.9",
    "style-loader": "3.3.1",
    "stylelint": "^14.5.3",
    "ts-loader": "^9.2.8",
    "typescript": "4.5.5",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  },
  "dependencies": {
    "dotenv": "16.0.0",
    "express": "^4.18.2",
    "express-history-api-fallback": "^2.2.1",
    "handlebars": "4.7.7",
    "nanoid": "3.3.1"
  }
}
