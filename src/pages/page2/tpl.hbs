	<div class="login__wrapper">
		<div class="login__item">
			{{> title text_title='Регистрация'}}
			<form>

				{{> inputform id='inputform3_page2' name='email' label='Почта' }}
				{{> inputform id='inputform4_page2' name='login' label='Логин' }}
